<div class="container">

  <div class="animal-show-title">
    <h2><%= @animal.name %></h2> <p><%= @animal.description %></p>
    <div class="row">
      <div class="col"><i class="fas fa-tag"></i> <%= @animal.species %></div>
      <div class="col"><i class="fas fa-medal"></i> <%= @animal.quality %></div>
      <div class="col" id="price"><i class="fas fa-comments-dollar"></i><%= @animal.price %> â‚¬per day</div>
      <div class="col-4"><i class="fas fa-map-marker-alt"></i> <%= @animal.address %></div>
      <%# <div class="me-3 col"><i class="far fa-heart"></i> Share</div>
      <div><i class="fas fa-download col"></i> Save</div> %>
    </div>


    <div class="animal-show-images d-flex flex-row">
      <% if @animal.photos.attached? %>
        <div class="main-image col-6">
          <%= cl_image_tag @animal.photos[0].key, alt: "#{@animal.name}", class:'main-img' %>
        </div>
        <div class="4-images d-flex flex-row col-6">
          <div class="d-flex flex-column justify-content-between w-50 px-3">
            <%= cl_image_tag @animal.photos[1].key, alt: "Kim",  class:'secondary-img' %>
            <%= cl_image_tag @animal.photos[2].key, alt: "Kim",  class:'secondary-img' %>
          </div>
          <div class="d-flex flex-column justify-content-between w-50 px-3 ">
            <%= cl_image_tag @animal.photos[3].key, alt: "Kim",  class:'secondary-img' %>
            <%= cl_image_tag @animal.photos[4].key, alt: "Kim",  class:'secondary-img' %>
          </div>
        </div>
        <% end %>
    </div>
  </div>

  <div class="bottom-page d-flex">
    <%# <div class="animal-description"><%= @animal.description %></div>
    <div class="resa-review col-12" >
      <div class="review">
        <h2> Reviews: </h2>
        <h3><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i>  <%= @animal.review %> </h3>
      </div>
      <div class="reservation-form col-6">
        <%= simple_form_for [@animal, @reservation] do |f|%>

          <div class= "row">
            <div class="col">
              <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker form-control"} %>
            </div>
            <div class="col">
              <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker form-control"} %>
            </div>
          </div>

          <div>
            <h5><strong id="price_html">Price: </strong></h5>
          </div>
        
          <div><%= f.input :address %> </div>
          <div><%= f.submit class: "btn-reservation"%></div>
            <% end %>
      </div>
    </div>
  </div>
</div>
